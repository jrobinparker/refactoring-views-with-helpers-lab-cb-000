<h1>Editing <%= @song.title %></h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %><br>
  <%= f.fields_for :artist do |artist_fields| %>
    <%= artist_fields.label :name %>
    <%= artist_fields.text_field :name %>
  <% end %>
  <br />

  <%= f.submit %>
<% end %>
